{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contato</h1>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>Nome</th>
                <td>{{ contato.nome }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contato.email }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ contato.telefone }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a href="{{ path('contato_index') }}" class="btn btn-sm btn-info"><i class="fa fa-chevron-left"></i> &nbsp; Voltar</a>
        <a href="{{ path('contato_edit', {'id': contato.id }) }}" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> &nbsp; Editar</a>
        <a href="{{ url('contato_delete', {'id': contato.id }) }}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> &nbsp; Excluir</a>
    </div>
{% endblock %}

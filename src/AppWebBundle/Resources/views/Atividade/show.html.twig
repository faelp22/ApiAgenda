{% extends 'base.html.twig' %}

{% block body %}
    <h1>Atividade</h1>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>Nome</th>
                <td>{{ atividade.nome }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ atividade.descricao }}</td>
            </tr>
            <tr>
                <th>Prazo</th>
                <td>{% if atividade.prazo %}{{ atividade.prazo is empty ? "" : atividade.prazo | date('d-m-Y H:i') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a href="{{ path('atividade_index') }}" class="btn btn-sm btn-info"><i class="fa fa-chevron-left"></i> &nbsp; Voltar</a>
        <a href="{{ path('atividade_edit', { 'id': atividade.id }) }}" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> &nbsp; Editar</a>
        <a href="{{ url('atividade_delete', { 'id': atividade.id }) }}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> &nbsp; Excluir</a>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <a href="{{ path('atividade_new') }}" class="btn btn-sm btn-primary" >Nova atividade</a>
        </div>
        <div class="col-md-6 col-sm-6">
            <h1 class="text-right">Lista de Atividades</h1>
        </div>
    </div>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descricao</th>
                <th>Prazo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for atividade in atividades %}
            <tr>
                <td><a href="{{ path('atividade_show', { 'id': atividade.id }) }}">{{ atividade.nome }}</a></td>
                <td>{{ atividade.descricao }}</td>
                <td>{% if atividade.prazo %}{{ atividade.prazo | date('d-m-Y H:i') }}{% endif %}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('atividade_show', { 'id': atividade.id }) }}" class="btn btn-xs btn-info"><i class="fa fa-eye"></i> &nbsp;Ver</a>
                        <a href="{{ path('atividade_edit', { 'id': atividade.id }) }}" class="btn btn-xs btn-warning"><i class="fa fa-edit"></i> &nbsp; Editar</a>
                        <a href="{{ url('atividade_delete', {'id': atividade.id }) }}" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i> &nbsp; Excluir</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker_date').datetimepicker({
                useCurrent: false,
                showTodayButton: true,
                minDate: new Date(),
                stepping: 5,
                locale: moment.locale(),
                sideBySide: true
            });
        });
    </script>
{% endblock %}

{% block body %}
    <h1 class="text-right">Criar nova atividade</h1>
    <form method="post" name="atividade" >
        <div id="atividade">
            <div class="form-group">
                <label class="required" for="atividade_nome">Nome</label>
                <input class="form-control" id="atividade_nome" maxlength="255" name="atividade[nome]" required="required" type="text"/>
            </div>
            <div class="form-group">
                <label class="control-label">Data e Hora</label>
                <div class="input-group date" id="datetimepicker_date">
                    <input type='text' name="atividade[prazo]" class="form-control" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
            <div class="form-group">
                <label class="required" for="atividade_descricao">Descrição</label>
                <textarea class="form-control" rows="6" id="atividade_descricao" name="atividade[descricao]" required="required"></textarea>
            </div>
            <input id="atividade_csrf_token" name="atividade[csrf_token]" type="hidden" value="{{ csrf_token('authenticate') }}" />
            <div class="form-group">
                <div class="btn-group">
                    <a href="{{ path('atividade_index') }}" class="btn btn-sm btn-info"><i class="fa fa-chevron-left"></i> &nbsp; Voltar</a>
                    <button type="submit" value="Create" class="btn btn-sm btn-success"><i class="fa fa-save"></i> &nbsp;Salvar</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Compromisso</h1>

    <table class="table table-striped table-bordered table-condensed">
        <tbody>
            <tr>
                <th>Nome</th>
                <td>{{ compromisso.nome }}</td>
            </tr>
            <tr>
                <th>Descricao</th>
                <td>{{ compromisso.descricao }}</td>
            </tr>
            <tr>
                <th>Local</th>
                <td>{{ compromisso.local }}</td>
            </tr>
            <tr>
                <th>Data</th>
                <td>{% if compromisso.data %}{{ compromisso.data is empty ? "" : compromisso.data | date('d-m-Y H:i') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a href="{{ path('compromisso_index') }}" class="btn btn-sm btn-info"><i class="fa fa-chevron-left"></i> &nbsp; Voltar</a>
        <a href="{{ path('compromisso_edit', { 'id': compromisso.id }) }}" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i> &nbsp; Editar</a>
        <a href="{{ url('compromisso_delete', { 'id': compromisso.id }) }}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> &nbsp; Excluir</a>
    </div>
{% endblock %}

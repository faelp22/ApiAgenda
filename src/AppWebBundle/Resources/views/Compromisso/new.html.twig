{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker_date').datetimepicker({
                useCurrent: false,
                showTodayButton: true,
                minDate: new Date(),
                stepping: 5,
                locale: moment.locale(),
                sideBySide: true
            });
        });
    </script>
{% endblock %}

{% block body %}
    <h1 class="text-right">Criar novo compromisso</h1>
    <form method="post" name="compromisso" >
        <div id="compromisso">
            <div class="form-group">
                <label class="required" for="compromisso_nome">Nome</label>
                <input class="form-control" id="compromisso_nome" maxlength="255" name="compromisso[nome]" required="required" type="text"/>
            </div>
            <div class="form-group">
                <label class="required" for="compromisso_local">Local</label>
                <input class="form-control" id="compromisso_local" maxlength="255" name="compromisso[local]" required="required" type="text"/>
            </div>
            <div class="form-group">
                <label class="control-label">Data e Hora</label>
                <div class="input-group date" id="datetimepicker_date">
                    <input type='text' name="compromisso[data]" class="form-control" />
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
            <div class="form-group">
                <label class="required" for="compromisso_descricao">Descrição</label>
                <textarea class="form-control" rows="6" id="compromisso_descricao" name="compromisso[descricao]" required="required"></textarea>
            </div>
            <input id="compromisso_csrf_token" name="compromisso[csrf_token]" type="hidden" value="{{ csrf_token('authenticate') }}" />
            <div class="form-group">
                <div class="btn-group">
                    <a href="{{ path('compromisso_index') }}" class="btn btn-sm btn-info"><i class="fa fa-chevron-left"></i> &nbsp; Voltar</a>
                    <button type="submit" value="Create" class="btn btn-sm btn-success"><i class="fa fa-save"></i> &nbsp;Salvar</button>
                </div>
            </div>
        </div>
    </form>
{% endblock %}

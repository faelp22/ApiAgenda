{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-sm-6">
            <a href="{{ path('compromisso_new') }}" class="btn btn-sm btn-primary" >Novo compromisso</a>
        </div>
        <div class="col-md-6 col-sm-6">
            <h1 class="text-right">Lista de Compromissos</h1>
        </div>
    </div>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descricao</th>
                <th>Local</th>
                <th>Data</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compromisso in compromissos %}
            <tr>
                <td><a href="{{ path('compromisso_show', { 'id': compromisso.id }) }}">{{ compromisso.nome }}</a></td>
                <td>{{ compromisso.descricao }}</td>
                <td>{{ compromisso.local }}</td>
                <td>{% if compromisso.data %}{{ compromisso.data | date('d-m-Y H:i') }}{% endif %}</td>
                <td>
                <div class="btn-group">
                        <a href="{{ path('compromisso_show', { 'id': compromisso.id }) }}" class="btn btn-xs btn-info"><i class="fa fa-eye"></i> &nbsp;Ver</a>
                        <a href="{{ path('compromisso_edit', { 'id': compromisso.id }) }}" class="btn btn-xs btn-warning"><i class="fa fa-edit"></i> &nbsp; Editar</a>
                        <a href="{{ url('compromisso_delete', { 'id': compromisso.id }) }}" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i> &nbsp; Excluir</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
